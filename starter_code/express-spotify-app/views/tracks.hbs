<div class="py-5 albums">
    <div class="container">
        <div class="row">
            {{#each tracks}}
            <div class="col-md-12">
                <div>
                    {{#if this.preview_url}}
                    <audio controls>
                        <source src={{this.preview_url}} type="audio/ogg">
                    </audio>
                    {{else}}
                    <img src="/images/place.png" alt="image not found" style="width:100%">
                    {{/if}}
                </div>
                <h6>
                    {{this.track_number}}-{{this.name}}
                </h6>
            </div>
            {{/each}}
        </div>
    </div>
</div>
</div>